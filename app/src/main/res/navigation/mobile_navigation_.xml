<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.devahmed.demo.onlinepharmacy.Screens.Home.HomeFragment"
        android:label="@string/menu_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_beauty"
            app:destination="@id/nav_products" />
    </fragment>

    <fragment
        android:id="@+id/nav_products"
        android:name="com.devahmed.demo.onlinepharmacy.Screens.ProductsShow.ProducstShowFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_show_products" >
        <argument
            android:name="category"
            app:argType="string"
            android:defaultValue="sssss" />
        <action
            android:id="@+id/action_nav_beauty_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>


    <fragment
        android:id="@+id/nav_add_item"
        android:name="com.devahmed.demo.onlinepharmacy.Screens.AddProducts.AddProductFragment"
        android:label="@string/menu_tools"
        tools:layout="@layout/fragment_add_product" />
    <fragment
        android:id="@+id/subCategoriesFragment"
        android:name="com.devahmed.demo.onlinepharmacy.Screens.SubCategories.SubCategoriesFragment"
        android:label="subcategories_fragment"
        tools:layout="@layout/subcategories_fragment" />


</navigation>